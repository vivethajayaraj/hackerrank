public static void plusMinus(List<Integer> arr) {
    // Write your code here
    int pos =0; int neg=0; int zero=0;
    int totalCount = arr.size();
    
    for(int num : arr){
      if(num>0){ 
        pos++ ;
      }
      else if (num<0){
        neg++;
      }
      else{
        zero++;
      }
    }
    
    System.out.printf("%.6f\n", (double)pos/totalCount);
    System.out.printf("%.6f\n", (double) neg/totalCount);
    System.out.printf("%.6f\n", (double) zero/totalCount);

    }
